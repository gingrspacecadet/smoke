{
  "name": "smoke",
  "private": true,
  "version": "1.2.1",
  "main": "frontend/main.js",
  "description": "A desktop game launcher built with Electron.",
  "author": {
    "name": "gingrspacecadet",
    "email": "jackrawlings2011@gmail.com"
  },
  "homepage": "https://github.com/gingrspacecadet",
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "wrangler": "^3.0.0"
  },
  "build": {
    "appId": "com.gingr.smoke",
    "productName": "Smoke",
    "directories": {
      "buildResources": "resources"
    },
    "asarUnpack": [
      "resources/7z/**"
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "frontend/**"
    ],
    "extraResources": [
      "resources/**"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Game"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "scripts": {
    "dev:backend": "cd backend && npx wrangler dev --local --port 8787",
    "dev:frontend": "cd frontend && npx electron .",
    "dev": "concurrently --kill-others-on-fail \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dist": "electron-builder"
  }
}
