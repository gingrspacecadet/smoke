{
  "name": "smoke",
  "private": true,
  "version": "0.1.0",
  "main": "frontend/main.js",
  "description": "A desktop game launcher built with Electron.",
  "author": {
    "name": "gingrspacecadet",
    "email": "jackrawlings2011@gmail.com"
  },
  "homepage": "https://github.com/gingrspacecadet",
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "wrangler": "^3.0.0"
  },
  "build": {
    "appId": "com.gingr.smoke",
    "productName": "Smoke",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "frontend/**"
    ],
    "extraResources": [
      "resources/**"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage","deb"],
      "category": "Game"
    }
  },
  "scripts": {
    "dev:backend": "cd backend && npx wrangler dev --local --port 8787",
    "dev:frontend": "cd frontend && npx electron .",
    "dev": "concurrently --kill-others-on-fail \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dist": "electron-builder"
  },
  "dependencies": {
    "mime-types": "^3.0.1",
    "tar": "^7.5.1",
    "unzipper": "^0.12.3"
  }
}
